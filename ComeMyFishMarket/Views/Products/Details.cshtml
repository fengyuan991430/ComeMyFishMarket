@model ComeMyFishMarket.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    BlobManager bm = new BlobManager();
    List<string> bloblist = bm.ViewBlobImage(Model.ProductImage);
    string[] splitblob = bloblist[0].Split("#");
    
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Image
        </dt>
        <dd class="col-sm-10">
            <img src="@splitblob[1]" height="200" width="200" />
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price) (RM)
        </dt>
        <dd class="col-sm-10">
            RM @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Product Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
    <a asp-action="SellerProduct">Back to List</a>
</div>
