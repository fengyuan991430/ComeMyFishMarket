@model IEnumerable<ComeMyFishMarket.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product List</h1>
<h1></h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            BlobManager bm = new BlobManager();
            List<string> bloblist = bm.ViewBlobImage(item.ProductImage);
            string[] splitblob = bloblist[0].Split("#");
            <tr>
                <td>
                    <img src="@splitblob[1]" width="200px" height="200px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    RM @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-controller="OrderItems" asp-action="Add To Cart" asp-route-id="@item.ProductID">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="AppUsers" asp-action="Index">Back to Seller List</a>
</div>