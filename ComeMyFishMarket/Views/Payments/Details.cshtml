@model ComeMyFishMarket.Models.Payment
@using ComeMyFishMarket.Data;
@inject ComeMyFishMarketClassContext context;
@using Microsoft.AspNetCore.Identity
@using ComeMyFishMarket.Areas.Identity.Data
@inject UserManager<ComeMyFishMarketUser> UserManager
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var receiver = context.AppUser.FirstOrDefault(x => x.RegUserID.Equals(Model.ReceivedBy));
}

<h1>Payment Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentDescription)
        </dd>
        <dt class="col-sm-2">
            Total Amount:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            Payment Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentDate)
        </dd>
        <dt class="col-sm-2">
            Pay To:
        </dt>
        <dd class="col-sm-10">
            @if (receiver != null)
            {
                @receiver.Username
            }
            else
            {
                var admin = "Admin";
                @admin
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="MarketOrders" asp-action="CustomerOrder">Back to Order List</a>
</div>
