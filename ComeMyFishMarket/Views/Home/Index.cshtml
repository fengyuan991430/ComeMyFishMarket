@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2000">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/lib/images/background1.jpg" alt="First slide" height="485" style="filter: brightness(70%);">
            <div class="carousel-caption">
                <h1> come my fish market</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/images/background2.jpg" alt="Second slide" height="485" style="filter: brightness(70%);">
            <div class="carousel-caption">
                <h1>come my fish market</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/images/background.jpeg" alt="Third slide" height="485" style="filter: brightness(70%);">
            <div class="carousel-caption">
                <h1>come my fish market</h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="fa fa-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="fa fa-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<style>
    .carousel-control-prev .fa-chevron-left,
    .carousel-control-next .fa-chevron-right {
        position: absolute;
        top: 45%;
        background-color: #16F529;
        width: 38px;
        height: 38px;
        line-height: 40px;
        border-radius: 50px;
    }

    .carousel-control-prev .fa-chevron-left {
        left: 20px;
    }

    .carousel-control-next .fa-chevron-right {
        right: 20px;
    }

    .carousel-indicators .active {
        background-color: #16F529;
    }

    h1 {
        font-family: 'Gill Sans', cursive;
        font-weight: 600;
        color: #16F529;
        text-transform:uppercase;
        margin-bottom:24%;
    }
</style>


